<section class="title-page">
  <h1>Новая заметка</h1>
</section>


<%= form_for :note, url: notes_path do |form| %>
  <% if @note.errors.any? %>
  <div class="danger">
      <h2>
        <%= pluralize(@note.errors.count, "error") %> prohibited
        this note from being saved:
      </h2>
      <ul>
        <% @note.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <section class="vhod">
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </section>

  <section class="vhod">
    <%= form.label :body %><br>
    <%= form.text_area :body , id: "text-area"%>
  </section>

  <section class="vhod">
    <%= form.submit(id: "knopka-vhoda", text: "Сохранить заметку")%>
  </section>
<% end %>

<%= link_to 'Назад', notes_path %>
