<% if @user.errors.any? %>
  <div class="error_explanations">
    <div class="alert alert-danger">
      Форма содержит <%= pluralize(@user.errors.count, "ошибок") %>
    </div>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
